.checkbox-checked
  margin-left: 0!important
  font-size: 13px
  padding: 0 5px
  position: relative
.checkbox-checked:after
  position: absolute
  border: 8px solid transparent
  width: 0
  height: 0
  border-bottom-color: #373A3C
  left: 35px
  top: 15px
  display: none
.checkbox-checked .description
  background-color: #373A3C
  position: absolute
  top: 31px
  left: 15px
  color: white
  padding: 5px 5px
  min-width: 200px
  display: none
  z-index: 100
.checkbox-checked:hover .description
  display: block
.checkbox-checked:hover:after
  display: block
  