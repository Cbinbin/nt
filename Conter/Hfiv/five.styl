.hfiv
  width: 100%
  height: 650px
.fiv1
  float: left
  width: 100%
  height: 10%
  padding-top: 30px
.fiv2
  float: left
  width: 100%
  height: 85%
.fiv3
  float: left
  width: 84%
  height: 100%
  margin: 0 8%
.fiv4
  float: left
  width: 25%
  height: 33.33%
.pt10
  float: left
  width: 220px
  height: 154px
  padding: 15px 32px
.hid_ftxt
  position: absolute
  width: 220px
  height: 104px
  margin: 15px 32px
  padding-top: 50px
  background: rgba(229,22,85,.64)
  text-align: center
  cursor: pointer
  opacity: 0

.hid_ftxt:hover
  opacity: 1
  transition: all .5s ease-in

@media (max-width: 1000px)
  .hfiv
    height: 700px
  .fiv4
    float: left
    width: 29%
    height: 21%
    margin: 2%
  .pt10
    width: 100%
    height: 100%
    padding: 0
  .hid_ftxt
    display: none



