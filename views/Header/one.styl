.header
  position: fixed
  top: 0
  width: 100%
  height: 85px
  background-color: #52d69d
  box-shadow: 0px 3px 20px #aaaaaa
.logo
  float: left
  width: 18%
  height: 85px
.navbar-img
  display: block
  float: right
  width: 58px
  height: 58px
  margin: 15px 35px 12px auto
.col
  float: left
  padding-top: 20px
  width: 82% 
  height: 65px
.nav-inlink 
  display: inline-block
  font-size: 23px
  height: 65px
.nav-item
  display: inline-block
  height: 65px
  color: #d3d6d5
.nav-text
  color: #fff
  font-weight: normal
  margin: 10px 22px 0
  padding-bottom: 2px
  border-bottom: 3px solid transparent  
.nav-link
  display: inline-block



  
@media (max-width: 600px)
  .header
    height: 60px
  .logo
    width: 12%
    height: 100%
  .navbar-img
    width: 42px
    height: auto
    margin: 10px auto
  .col
    padding-top: 5px
    margin-left: 5%
    width: 83%
    height: 55px
  .nav-inlink ,.nav-item
    height: 85%
    font-size: 110%
  .nav-text
    width: 70%
    margin: 10px 5px 0 20px